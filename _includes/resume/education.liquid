<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] | sort: 'startDate' | reverse %}
  {% for content in education %}
    <li class="list-group-item">
      <div class="row">
        <!-- colonna date / location --------------------------------------- -->
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.startDate and content.startDate != '' %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate   = content.endDate   | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date      = startDate | append: ' - ' | append: endDate %}
          {% endif %}

          <table class="table-cv">
            <tbody>
              {% if date %}
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle"
                        style="min-width: 75px">
                    {{ date }}
                  </span>
                </td>
              </tr>
              {% endif %}

              {% if content.location %}
              <tr>
                <td>
                  <p class="location">
                    <i class="fa-solid fa-location-dot iconlocation"></i> {{ content.location }}
                  </p>
                </td>
              </tr>
              {% endif %}
            </tbody>
          </table>
        </div>

        <!-- colonna testo --------------------------------------------------- -->
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <div class="ml-1 ml-md-4">
            <!-- NIENTE <h…>: così non finisce nel TOC -->
            <strong class="title">
              {% if content.url %}<a href="{{ content.url }}">{{ content.studyType }}</a>
              {% else %}{{ content.studyType }}{% endif %}
            </strong><br/>

            <span class="institution" style="font-size: 0.95rem">{{ content.institution }}</span>

            {% if content.area %}
              <div style="font-size: 0.9rem; font-style: italic">{{ content.area }}</div>
            {% endif %}

            <ul class="items">
              {% for item in content.courses %}
                <li><span class="item">{{ item }}</span></li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
